                    on_release:
                        nav_drawer.set_state("close")
                        screen_manager.current = "registercourses"

                MDNavigationDrawerDivider:

                MDNavigationDrawerItem:
                    icon: "book"
                    text: "Course History"
                    on_release:
                        nav_drawer.set_state("close")
                        screen_manager.current = "coursehistory1"
                
                MDNavigationDrawerDivider:

                MDNavigationDrawerItem:
                    icon: "chart-bar"
